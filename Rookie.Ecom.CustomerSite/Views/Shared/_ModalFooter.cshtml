@model Rookie.Ecom.Customersite.BootstrapModal.ModalFooter
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor


<div class="modal-footer">
    <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-default" type="button">@Model.CancelButtonText</button>
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn btn-success al @Model.SubmitButtonClass" id="@Model.SubmitButtonID" type="submit">
            @Model.SubmitButtonText
        </button>
    }
</div>
<script>
    $(".al").on("click", function () {
        $(".alert").removeClass("in").show();
        $(".alert").delay(600).addClass("in").fadeOut(5000);
    });
</script>
